<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_legal">

    <fragment
        android:id="@+id/fragment_legal"
        android:name="com.cyk29.safewhere.informationmodule.LegalInfoFragment"
        android:label="Legal Fragment"
        tools:layout="@layout/fragment_legal_info">
        <action
            android:id="@+id/action_legal_to_statistics"
            app:destination="@id/fragment_statistics" />
        <action
            android:id="@+id/action_legal_to_faq"
            app:destination="@id/fragment_f_a_q" />
    </fragment>

    <fragment
        android:id="@+id/fragment_statistics"
        android:name="com.cyk29.safewhere.informationmodule.StatisticsFragment"
        android:label="Statistics Fragment"
        tools:layout="@layout/fragment_statistics"/>

    <fragment
        android:id="@+id/fragment_f_a_q"
        android:name="com.cyk29.safewhere.informationmodule.FAQFragment"
        android:label="FAQ Fragment"
        tools:layout="@layout/fragment_f_a_q"/>
</navigation>
