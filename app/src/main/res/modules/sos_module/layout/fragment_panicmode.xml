<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink">

    <Button
        android:id="@+id/panic_cancel_BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/button_sos"
        android:fontFamily="@font/lexend"
        android:padding="20dp"
        android:text="@string/cancel_panic_mode"
        android:textColor="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panic_desc_TV" />

    <ImageView
        android:id="@+id/panic_countdown_bg"
        android:layout_width="280.18dp"
        android:layout_height="280.18dp"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toTopOf="@+id/panic_cancel_BT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/panic_mode_bg" />

    <ImageView
        android:id="@+id/panic_countdown"
        android:layout_width="256.83dp"
        android:layout_height="256.83dp"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toTopOf="@+id/panic_cancel_BT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/panic_mode_countdown" />

    <TextView
        android:id="@+id/panic_desc_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="113dp"
        android:fontFamily="@font/lexend"
        android:gravity="center_horizontal"
        android:text="@string/you_are_currently_in_panic_mode_tap_the_button_every_10_seconds"
        android:textColor="@color/red"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/panic_cancel_BT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panic_countdown_bg" />

    <TextView
        android:id="@+id/panic_countdown_TV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/lexend_bold"
        android:gravity="center"
        android:text="@string/_10"
        android:textColor="@color/white"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="@+id/panic_countdown"
        app:layout_constraintEnd_toEndOf="@+id/panic_countdown"
        app:layout_constraintStart_toStartOf="@+id/panic_countdown"
        app:layout_constraintTop_toTopOf="@+id/panic_countdown" />

    <ImageView
        android:id="@+id/panic_continue_IV"
        android:layout_width="256.83dp"
        android:layout_height="256.83dp"
        android:alpha="0"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toTopOf="@+id/panic_cancel_BT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/panic_mode_countdown" />

</androidx.constraintlayout.widget.ConstraintLayout>