<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".mapmodule.SecondGeoFragment">

    <ImageView
        android:id="@+id/backBT3"
        android:layout_width="52.46dp"
        android:layout_height="52.46dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/back_white3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lexend_bold"
        android:text="Select Location"
        android:textColor="@color/white"
        android:textSize="22.48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/locationET"
        android:layout_width="0dp"
        android:layout_height="56.17dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/white_button"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:hint="Enter Location"
        android:inputType="text"
        android:paddingLeft="55dp"
        android:textColorHint="#A6B7FF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="21dp"
        android:layout_height="28dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/location_geofence"
        app:layout_constraintBottom_toBottomOf="@+id/locationET"
        app:layout_constraintStart_toStartOf="@+id/locationET"
        app:layout_constraintTop_toTopOf="@+id/locationET" />

    <EditText
        android:id="@+id/radiusET"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:hint="Radius of area"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="#A6B7FF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationET" />

    <Button
        android:id="@+id/nextGeoBT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_button"
        android:fontFamily="@font/lexend"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>