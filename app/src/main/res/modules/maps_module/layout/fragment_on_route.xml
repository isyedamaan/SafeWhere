<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".mapmodule.DestinationSelectFragment">

    <LinearLayout
        android:id="@+id/onRoute_dest_LL"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/white"
        android:elevation="2dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bgView"
        app:layout_constraintTop_toTopOf="@+id/bgView">

        <TextView
            android:id="@+id/onRoute_start_TV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/location"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@string/your_location"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="UseCompatTextViewDrawableXml" />


        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/onRoute_destination_TV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableStart="@drawable/ic_destionation_marker"
            android:drawablePadding="15dp"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:gravity="center_vertical"
            android:paddingStart="19dp"
            android:paddingEnd="15dp"
            android:text="@string/choose_destination"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="UseCompatTextViewDrawableXml" />

    </LinearLayout>

    <View
        android:id="@+id/bgView"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginBottom="-25dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/onRoute_end_Btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="@color/bright_red"
        android:fontFamily="@font/lexend"
        android:text="@string/end_route"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/bgView" />

    <ImageView
        android:id="@+id/onRoute_report_IV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:contentDescription="@string/image"
        android:layout_marginBottom="10dp"
        android:src="@drawable/report_icon2"
        app:layout_constraintBottom_toTopOf="@+id/bgView"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/onRoute_sos_Btn"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/sos_icon"
        android:contentDescription="@string/image"
        app:layout_constraintBottom_toTopOf="@+id/bgView"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>