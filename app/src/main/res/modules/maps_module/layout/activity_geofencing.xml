<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/geoBackBT"
        android:layout_width="52.46dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/back_white3"
        app:layout_constraintBottom_toBottomOf="@+id/geoActTitleTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/geoActTitleTV" />

    <TextView
        android:id="@+id/geoActTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/register_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geoActTitleTV">

        <TextView
            android:id="@+id/registerGeoTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/lexend_bold"
            android:text="Register this device for geofencing"
            android:textColor="@color/white"
            android:textSize="18.73dp" />

        <EditText
            android:id="@+id/nameET"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Name"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/brigtest_blue"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/alertNumberET"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Alert Contact Number"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/brigtest_blue"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/alertEmailET"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Alert Contact Email"
            android:inputType="text|textEmailAddress"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/brigtest_blue"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/geoPassET"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Geofencing Password"
            android:inputType="number|numberPassword"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/brigtest_blue"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setup_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geoActTitleTV">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchCL"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="2dp">

            <View
                android:id="@+id/selectLocationBG"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/white_button"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <fragment
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/selectLocationBG"
                app:layout_constraintEnd_toEndOf="@+id/selectLocationBG"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/selectLocationBG"
                app:layout_constraintTop_toTopOf="@+id/selectLocationBG"
                tools:visibility="invisible">

            </fragment>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <EditText
            android:id="@+id/radiusET"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="@string/radius"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            android:visibility="visible" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ready_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/mainGeoBT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geoActTitleTV"
        tools:visibility="visible">

        <EditText
            android:id="@+id/resetGeofencingET"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_bg"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Geofencing Password"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/brigtest_blue"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/resetGeoBT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="68.96dp"
            android:layout_height="68.96dp"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/geofence_configured" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="336dp"
            android:layout_height="47dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lexend_bold"
            android:text="You have successfully configured
        this device for Geofencing."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18.72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_editor_absoluteX="56.17dp" />

        <Button
            android:id="@+id/resetGeoBT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_button"
            android:backgroundTint="@color/coral"
            android:fontFamily="@font/lexend"
            android:text="@string/reset_geo"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/mainGeoBT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_button"
        android:fontFamily="@font/lexend"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>