<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelectLocationFragment"
    android:background="@color/blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_bold"
        android:text="Select Location"
        android:textColor="@color/white"
        android:textSize="22.48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="37dp" />

    <EditText
        android:id="@+id/locationET"
        android:layout_width="381.94dp"
        android:layout_height="56.17dp"
        android:background="@drawable/white_button"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:hint="Enter Location"
        android:inputType="text"
        android:paddingLeft="55dp"
        android:textColorHint="#A6B7FF"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="20.59dp"
        tools:layout_editor_absoluteY="104.85dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="21dp"
        android:layout_height="28dp"
        android:src="@drawable/location_geofence"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="119dp" />

    <EditText
        android:id="@+id/radiusET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:hint="Radius of area"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="#A6B7FF"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="43.06dp"
        tools:layout_editor_absoluteY="200.33dp" />

    <Button
        android:id="@+id/registerBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_button"
        android:fontFamily="@font/lexend"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="14.99dp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="655dp" />

    <ImageView
        android:id="@+id/backBT"
        android:layout_width="52.46dp"
        android:layout_height="52.46dp"
        android:src="@drawable/back_white3"
        tools:layout_editor_absoluteX="20.61dp"
        tools:layout_editor_absoluteY="24.35dp" />



</androidx.constraintlayout.widget.ConstraintLayout>