<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EnableGeofenceFragment"
    android:background="@color/blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lexend_bold"
        android:text="Geofencing"
        android:textColor="@color/white"
        android:textSize="22.48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="37dp" />

    <Button
        android:id="@+id/registerBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_button"
        android:fontFamily="@font/lexend"
        android:text="Disable Geofencing"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="33.7dp"
        tools:layout_editor_absoluteY="657.16dp" />

    <TextView
        android:id="@+id/locationET"
        android:layout_width="338.88dp"
        android:layout_height="49.83dp"
        android:background="@drawable/bluetv_bg_"
        android:ems="10"
        android:fontFamily="@font/lexend"
        android:hint="Gasket Alley"
        android:inputType="text"
        android:paddingLeft="55dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="43.06dp"
        tools:layout_editor_absoluteY="101.1dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="21dp"
        android:layout_height="28dp"
        android:src="@drawable/location"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="119dp" />

    <ImageView
        android:id="@+id/backBT"
        android:layout_width="52.46dp"
        android:layout_height="52.46dp"
        android:src="@drawable/back_white3"
        tools:layout_editor_absoluteX="20.61dp"
        tools:layout_editor_absoluteY="24.35dp" />

    <ImageView
        android:id="@+id/locationIV"
        android:layout_width="21dp"
        android:layout_height="28dp"
        android:src="@drawable/location_geofence"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="112.73dp" />

</androidx.constraintlayout.widget.ConstraintLayout>