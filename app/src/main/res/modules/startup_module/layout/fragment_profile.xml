<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="100dp">

        <ImageView
            android:id="@+id/profile_icon_IV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/img_1" />

        <EditText
            android:id="@+id/profile_name_ET"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="@string/name"
            android:inputType="text"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            android:autofillHints="name"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/profile_phone_ET"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="@string/phone"
            android:inputType="phone"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            android:autofillHints="phone"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/profile_ECName_ET"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="@string/emergency_contact_name"
            android:inputType="text"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            android:autofillHints="name"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/profile_ECPhone_ET"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="@string/emergency_contact_phone"
            android:inputType="phone"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            android:autofillHints="phone"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/profile_ECEMail_ET"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="@string/emergency_contact_email"
            android:inputType="text|textEmailAddress"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            android:autofillHints="emailAddress"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/profile_save_Btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/pink_button"
            android:fontFamily="@font/lexend_bold"
            android:text="@string/save_profile"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <Button
            android:id="@+id/profile_resetPass_Btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/pink_button"
            android:fontFamily="@font/lexend_bold"
            android:text="@string/reset_pass"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/profile_logout_Btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/red_button"
            android:fontFamily="@font/lexend_bold"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>