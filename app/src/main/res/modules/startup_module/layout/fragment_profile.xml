<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="100dp">

        <ImageView
            android:id="@+id/profilepicIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/img_1" />

        <EditText
            android:id="@+id/ETName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Name"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/ETPhone"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Phone"
            android:inputType="number"
            android:paddingStart="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/ET_EC_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Emergency Contact Name"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/ET_EC_Phone"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Emergency Contact Phone"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/ET_EC_Email"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/text_shape"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Emergency Contact Email"
            android:inputType="text"
            android:paddingStart="15dp"
            android:textColor="@color/blue"
            android:textColorHint="#A6B7FF"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/BTEditProfile"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/pink_button"
            android:fontFamily="@font/lexend_bold"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <Button
            android:id="@+id/BTResetPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/pink_button"
            android:fontFamily="@font/lexend_bold"
            android:text="Reset Password"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/BTLogout"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/red_button"
            android:fontFamily="@font/lexend_bold"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>