<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="89dp">

    <TextView
        android:id="@+id/reportQtnTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/report_question"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportTitleTV" />

    <TextView
        android:id="@+id/reportTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/report"
        android:textColor="@color/white"
        android:textSize="26.15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/BackBtnReport"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_white" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportTitleTV"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/safetyHazardBT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:contentDescription="@string/image"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/susActivityBT"
            app:layout_constraintEnd_toStartOf="@+id/susActivityBT"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/susActivityBT"
            app:srcCompat="@drawable/endangerment" />

        <TextView
            android:id="@+id/safetyHazardTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/title_public_safety_hazards"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/safetyHazardBT"
            app:layout_constraintStart_toStartOf="@+id/safetyHazardBT"
            app:layout_constraintTop_toBottomOf="@+id/safetyHazardBT" />

        <ImageButton
            android:id="@+id/susActivityBT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:contentDescription="@string/image"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/animalBT"
            app:layout_constraintEnd_toStartOf="@+id/vandalismBT"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/safetyHazardBT"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/endangerment" />

        <TextView
            android:id="@+id/susActivityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/title_suspicious_activities"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/susActivityBT"
            app:layout_constraintStart_toStartOf="@+id/susActivityBT"
            app:layout_constraintTop_toBottomOf="@+id/susActivityBT" />

        <ImageButton
            android:id="@+id/vandalismBT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:contentDescription="@string/image"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/susActivityBT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/susActivityBT"
            app:layout_constraintTop_toTopOf="@+id/susActivityBT"
            app:srcCompat="@drawable/endangerment" />

        <TextView
            android:id="@+id/vandalismTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/title_street_vandalism"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/vandalismBT"
            app:layout_constraintStart_toStartOf="@+id/vandalismBT"
            app:layout_constraintTop_toBottomOf="@+id/vandalismBT" />

        <ImageButton
            android:id="@+id/envIssueBT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:contentDescription="@string/image"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/animalBT"
            app:layout_constraintEnd_toStartOf="@+id/animalBT"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/animalBT"
            app:srcCompat="@drawable/endangerment" />

        <TextView
            android:id="@+id/envIssueTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/title_environmental_issues"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/envIssueBT"
            app:layout_constraintStart_toStartOf="@+id/envIssueBT"
            app:layout_constraintTop_toBottomOf="@+id/envIssueBT" />

        <ImageButton
            android:id="@+id/animalBT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:contentDescription="@string/image"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/streetAltBT"
            app:layout_constraintEnd_toStartOf="@+id/accidentBT"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/envIssueBT"
            app:layout_constraintTop_toBottomOf="@+id/susActivityBT"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/endangerment" />

        <TextView
            android:id="@+id/animalTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/title_stray_animals"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/animalBT"
            app:layout_constraintStart_toStartOf="@+id/animalBT"
            app:layout_constraintTop_toBottomOf="@+id/animalBT" />

        <ImageButton
            android:id="@+id/accidentBT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:contentDescription="@string/image"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/animalBT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/animalBT"
            app:layout_constraintTop_toTopOf="@+id/animalBT"
            app:srcCompat="@drawable/endangerment" />

        <TextView
            android:id="@+id/accidentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/title_traffic_accidents"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/accidentBT"
            app:layout_constraintStart_toStartOf="@+id/accidentBT"
            app:layout_constraintTop_toBottomOf="@+id/accidentBT" />

        <ImageButton
            android:id="@+id/healthBT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:contentDescription="@string/image"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/streetAltBT"
            app:layout_constraintEnd_toStartOf="@+id/streetAltBT"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/streetAltBT"
            app:srcCompat="@drawable/endangerment" />

        <TextView
            android:id="@+id/healthTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/title_public_health_concerns"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/healthBT"
            app:layout_constraintStart_toStartOf="@+id/healthBT"
            app:layout_constraintTop_toBottomOf="@+id/healthBT" />

        <ImageButton
            android:id="@+id/streetAltBT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:contentDescription="@string/image"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/violenceBT"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/healthBT"
            app:layout_constraintTop_toBottomOf="@+id/animalBT"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/endangerment" />

        <TextView
            android:id="@+id/streetAltTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/title_street_altercations"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/streetAltBT"
            app:layout_constraintStart_toStartOf="@+id/streetAltBT"
            app:layout_constraintTop_toBottomOf="@+id/streetAltBT" />

        <ImageButton
            android:id="@+id/violenceBT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/button"
            android:contentDescription="@string/image"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/streetAltBT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/streetAltBT"
            app:layout_constraintTop_toTopOf="@+id/streetAltBT"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/endangerment" />

        <TextView
            android:id="@+id/violenceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/lexend"
            android:gravity="center"
            android:text="@string/title_violence"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/violenceBT"
            app:layout_constraintStart_toStartOf="@+id/violenceBT"
            app:layout_constraintTop_toBottomOf="@+id/violenceBT" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#97000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/FCVReport"
        android:name="com.cyk29.safewhere.reportmodule.MakeReportFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout="@layout/fragment_make_report" />

</androidx.constraintlayout.widget.ConstraintLayout>