<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Translate animation -->
    <translate
        android:fromYDelta="0%"
        android:toYDelta="-100%"
        android:duration="500"/>

    <!-- Rotate animation -->
    <rotate
        android:fromDegrees="0"
        android:toDegrees="45"
        android:pivotX="50%"
        android:pivotY="0%"
        android:duration="500"/>
</set>